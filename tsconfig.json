{
    "compilerOptions": {
      "target": "esnext", // Уровень ECMAScript для компиляции - последняя версия (ESNext). 
      "lib":["dom","dom.iterable","esnext"] ,//Набор библиотек, доступных для использования 
      "allowJs":true,// Разрешает компиляцию файлов JavaScript в проекте.
      "skipLibCheck" :true,//Пропускает проверку файлов типов библиотек.
      "esModuleInterop" :true,//Разрешает использование интероперабельности ESM для модулей.
      "allowSyntheticDefaultImports": true,//Позволяет использовать синтетические экспорты для модулей,где они не явно определены
      "forceConsistentCasingInFileNames":true,//Проверяет, что имена файлов соответствуют ожидаемому регистру.
      "module": "esnext",//Формат модулей,используемый в проекте-esnext(для поддержки самых новых возможностей ECMAScript)
      "moduleResolution":"node" ,// Способ разрешения импортов модулей - с использованием алгоритма разрешения Node.js.
      "resolveJsonModule": true, //Разрешает импорт JSON файлов в качестве модулей.
      "isolatedModules": true,  // Разрешает компиляцию каждого файла в отдельный модуль.            
      "strict": true,  //Включает строгий режим                   
      "noEmit": true,//Отключает генерацию выходных файлов компиляции 
      "jsx" :"react-jsx",//Включает поддержку синтаксиса JSX в проекте с использованием React.
    },
    "include": ["src"],//
  }